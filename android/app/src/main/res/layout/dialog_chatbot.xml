<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_container"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/chatbot_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recommendations_chatbot_description"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/colorOnSurface" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="16dp">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/chatbot_conversation_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="ifContentScrolls"
            android:paddingBottom="8dp"
            android:scrollbarStyle="outsideOverlay">

            <LinearLayout
                android:id="@+id/chatbot_conversation_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp" />
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/chatbot_empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/recommendations_chatbot_empty_state"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/text_secondary" />
    </FrameLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/chatbot_question_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/recommendations_chatbot_question_hint"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="?attr/colorPrimary"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:endIconContentDescription="@string/recommendations_chatbot_send"
        app:endIconDrawable="@drawable/ic_chatbot_send"
        app:endIconMode="custom"
        app:endIconTint="?attr/colorPrimary"
        app:startIconDrawable="@drawable/ic_message_24"
        app:startIconTint="?attr/colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/chatbot_question_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:minLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/chatbot_progress"
        style="@style/Widget.MaterialComponents.CircularProgressIndicator.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:indicatorColor="?attr/colorPrimary"
        app:indicatorSize="32dp" />
</LinearLayout>
