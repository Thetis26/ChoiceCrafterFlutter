<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_12sdp"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/discussion_completion_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/retry_activity_from_discussion"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/activity_retry_button"
                android:textAllCaps="false"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                app:icon="@drawable/ic_retry"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/icon_on_surface" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/return_to_activities_from_discussion"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="@string/activity_return_button"
                android:textAllCaps="false"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:icon="@drawable/ic_task_list"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/icon_on_surface" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_like"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:contentDescription="@string/like_icon_description"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/post_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoebold"
                android:text="@string/likes_label"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/comment_edittext"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Type a comment"
                android:minHeight="48dp"
                android:paddingVertical="8dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/post"
                style="@style/button_lavender"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:includeFontPadding="false"
                android:minHeight="48dp"
                android:text="Post" />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comments_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
