<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/background_surface"
    app:strokeWidth="1dp">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/statistics_scroll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls"
        android:padding="20dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/statistics_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/statistics_card_title"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_statistics_chip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:id="@+id/icon_time"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/statistics_card_time"
                        android:src="@drawable/clock_check_outline" />

                    <TextView
                        android:id="@+id/time_taken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/statistics_card_time"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_statistics_chip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:id="@+id/icon_score"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/statistics_card_score"
                        android:src="@drawable/trophy" />

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/statistics_card_score"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_statistics_chip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:id="@+id/icon_completion"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/statistics_card_completion"
                        android:src="@drawable/ic_activity_completed_check" />

                    <TextView
                        android:id="@+id/completion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/statistics_card_completion"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_hints"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/statistics_card_hints"
                        android:src="@drawable/lightbulb_on" />

                    <TextView
                        android:id="@+id/hints_used"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="@string/statistics_card_hints"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/colleague_performance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/statistics_card_colleague_performance"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/task_breakdown_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/statistics_task_breakdown_header"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/task_breakdown_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                app:dividerColor="@color/divider_default"
                app:thickness="1dp" />

            <!-- language: xml -->
            <LinearLayout
                android:id="@+id/completion_actions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/to_discussion"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="@string/statistics_card_discussion_cta"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    app:icon="@drawable/baseline_chat_bubble_outline_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@color/icon_on_surface" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/retry_activity_button"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="@string/activity_retry_button"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_retry"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="@color/icon_on_surface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/return_to_activities_button"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="@string/activity_return_button"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_task_list"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="@color/icon_on_surface" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</com.google.android.material.card.MaterialCardView>
