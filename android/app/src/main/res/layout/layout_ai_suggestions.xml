<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ai_suggestions_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/ai_suggestions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recommendations_ai_title"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/text_primary" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/ai_suggestions_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ai_suggestions_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/text_secondary"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ai_suggestions_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone" />
</LinearLayout>
