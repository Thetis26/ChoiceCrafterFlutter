<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    card_view:cardCornerRadius="24dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="false">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_task_card_info"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_task_card_icon_holder"
                    android:contentDescription="@string/task_type_info_card_label"
                    android:padding="8dp"
                    android:src="@drawable/ic_info_card"
                    card_view:tint="@color/colorPrimaryDark" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/taskTypeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoebold"
                        android:text="@string/task_type_info_card_label"
                        android:textAllCaps="true"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/taskRewardLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/segoe"
                        android:text="@string/task_reward_info_card"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/info_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoebold"
                android:text="@string/info_card_default_title"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/info_card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/segoe"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/info_card_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/info_card_media_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_task_card_panel"
                android:padding="12dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/info_card_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/loading_background" />

                <ImageView
                    android:id="@+id/info_card_media_overlay"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_task_card_icon_holder"
                    android:contentDescription="@string/info_card_media_overlay_description"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_video_library_24"
                    android:visibility="gone"
                    card_view:tint="@color/colorPrimaryDark" />
            </FrameLayout>

            <Button
                android:id="@+id/interactive_button"
                style="@style/button_teal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/info_card_action_explore"
                android:textColor="@color/text_primary"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/check_answer_button"
                    style="@style/button_lavender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_task_card_icon_holder"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="@string/info_card_continue"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.cardview.widget.CardView>
