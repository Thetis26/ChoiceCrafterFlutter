<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_terms_dialog"
    android:padding="24dp">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/termsScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:fadingEdgeLength="12dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/termsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_dialog_title"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold"
                android:textSize="18sp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/termsIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/terms_dialog_intro"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/termsCollectTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/terms_dialog_collect_title"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/termsCollectBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/terms_dialog_collect_body"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/termsUseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/terms_dialog_use_title"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/termsUseBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/terms_dialog_use_body"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/termsProtectTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/terms_dialog_protect_title"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/termsProtectBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/terms_dialog_protect_body"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/termsRightsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/terms_dialog_rights_title"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/termsRightsBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/terms_dialog_rights_body"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/termsFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/terms_dialog_footer"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                android:lineSpacingExtra="1dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/termsActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/termsCancelButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/gray_600" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/termsAgreeButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/agree"
            android:textAllCaps="false"
            android:textColor="@color/lavender" />

    </LinearLayout>
</LinearLayout>
