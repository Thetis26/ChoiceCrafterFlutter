<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_recommendation_preview"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="12dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recommendation_preview_height"
        android:background="@drawable/bg_recommendation_thumbnail">

        <ImageView
            android:id="@+id/recommendation_preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/recommendation_type_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:background="@drawable/bg_recommendation_thumbnail"
            android:padding="6dp"
            android:scaleType="centerInside" />
    </FrameLayout>

    <TextView
        android:id="@+id/recommendation_preview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/text_primary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recommendation_preview_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/text_secondary" />

</LinearLayout>
