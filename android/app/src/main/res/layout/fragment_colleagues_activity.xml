<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="16dp"
    android:clipToPadding="false"
    tools:context=".ui.colleagues_activity.ColleaguesActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Three Ranking Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/topThreeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="0dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                tools:layout_editor_absoluteX="16dp">

                <!-- Rank 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rank1Image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/content_description_rank_one"
                        android:src="@drawable/medal_gold" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/rank1StudentImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/content_description_student_image"
                        android:src="@drawable/avatar_andrei"
                        app:shapeAppearanceOverlay="@style/RoundedImageView" />

                    <TextView
                        android:id="@+id/rank1StudentName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/colleagues_activity_rank_one_name"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rank1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/colleagues_activity_rank_one_score"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Rank 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rank2Image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/content_description_rank_two"
                        android:src="@drawable/medal_silver" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/rank2StudentImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/content_description_student_image"
                        android:src="@drawable/avatar1"
                        app:shapeAppearanceOverlay="@style/RoundedImageView" />

                    <TextView
                        android:id="@+id/rank2StudentName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/colleagues_activity_rank_two_name"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rank2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/colleagues_activity_rank_two_score"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Rank 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rank3Image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/content_description_rank_three"
                        android:src="@drawable/medal_couper" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/rank3StudentImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/content_description_student_image"
                        android:src="@drawable/avatar2"
                        app:shapeAppearanceOverlay="@style/RoundedImageView" />

                    <TextView
                        android:id="@+id/rank3StudentName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/colleagues_activity_rank_three_name"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rank3Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/colleagues_activity_rank_three_score"
                        android:textSize="16sp" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/currentUserScoreCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false"
                    app:strokeColor="@android:color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_current_user_score"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/currentUserInitial"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_current_user_initial"
                            android:gravity="center"
                            android:text="@string/colleagues_activity_current_user_initial_placeholder"
                            android:textAllCaps="true"
                            android:textColor="@color/gamified_text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/currentUserEmblem"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="-12dp"
                            android:layout_marginTop="-6dp"
                            android:contentDescription="@string/content_description_current_user_badge"
                            android:src="@drawable/ic_current_user_badge"
                            app:layout_constraintStart_toEndOf="@id/currentUserInitial"
                            app:layout_constraintTop_toTopOf="@id/currentUserInitial" />

                        <TextView
                            android:id="@+id/currentUserScoreLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/colleagues_activity_current_user_label"
                            android:textColor="@color/gamified_text_secondary"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/currentUserInitial"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/currentUserScoreValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/colleagues_activity_current_user_score_placeholder"
                            android:textColor="@color/gamified_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/currentUserInitial"
                            app:layout_constraintTop_toBottomOf="@id/currentUserScoreLabel" />

                        <TextView
                            android:id="@+id/currentUserRank"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/colleagues_activity_current_user_rank_placeholder"
                            android:textColor="@color/gamified_text_secondary"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/currentUserInitial"
                            app:layout_constraintTop_toBottomOf="@id/currentUserScoreValue" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/motivationalPromptCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- ImageView for visual icon -->
                <ImageView
                    android:id="@+id/iconImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/content_description_motivational_icon"
                    android:src="@drawable/trophy" />

                <!-- TextView for the small paragraph -->
                <TextView
                    android:id="@+id/motivationalPrompt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:paddingStart="8dp"
                    android:text="@string/motivational_prompt_fallback"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/latestActivitySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/colleagues_activity_latest_activity_title"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/colleagueActivityList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"
            android:paddingBottom="8dp"
            android:clipToPadding="false" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
