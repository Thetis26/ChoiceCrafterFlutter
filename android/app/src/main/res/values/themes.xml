<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudentApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/text_inverse</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/text_inverse</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.StudentApp.Medium</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.StudentApp.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.StudentApp.Medium</item>
        <item name="materialButtonStyle">@style/Widget.StudentApp.Button</item>
        <item name="materialCardViewStyle">@style/Widget.StudentApp.CardView</item>
        <item name="materialSwitchStyle">@style/Widget.StudentApp.Switch</item>
        <item name="switchStyle">@style/Widget.StudentApp.Switch</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Theme.StudentAppStyled" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/text_inverse</item> <!-- White, for text on primary color -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/text_inverse</item> <!-- White, for text on secondary color -->

        <!-- Accent color -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background color -->
        <item name="android:background">@color/background_primary</item>
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item> <!-- Light grey, RGB: (224, 224, 224) -->
        <item name="android:textColorSecondary">@color/text_secondary</item> <!-- Slightly darker grey, RGB: (176, 176, 176) -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.StudentApp.Medium</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.StudentApp.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.StudentApp.Medium</item>
        <item name="materialButtonStyle">@style/Widget.StudentApp.Button</item>
        <item name="materialCardViewStyle">@style/Widget.StudentApp.CardView</item>
        <item name="materialSwitchStyle">@style/Widget.StudentApp.Switch</item>
        <item name="switchStyle">@style/Widget.StudentApp.Switch</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.StudentApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StudentApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StudentApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>