<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="android:fontFamily">@font/segoebold</item>
    </style>
    <style name="AppTheme.NoActionBarBridge" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="android:fontFamily">@font/segoebold</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="android:fontFamily">@font/segoebold</item>
    </style>
    <style name="RoundedImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundedImageView.Circle" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.StudentApp.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/studentapp_corner_radius</item>
    </style>

    <style name="Widget.StudentApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.StudentApp.Medium</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/studentapp_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/studentapp_button_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/studentapp_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/studentapp_button_vertical_padding</item>
        <item name="iconPadding">@dimen/spacing_small</item>
    </style>

    <style name="Widget.StudentApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.StudentApp.Medium</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="Widget.StudentApp.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="useMaterialThemeColors">true</item>
    </style>

    <style name="seperator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_5sdp</item>
        <item name="android:background">@color/divider_default</item>
    </style>

    <style name="button_lavender">
        <item name="android:background">@drawable/button_lavender</item>
        <item name="android:paddingStart">@dimen/studentapp_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/studentapp_button_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/studentapp_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/studentapp_button_vertical_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="fontFamily">@font/segoebold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_teal">
        <item name="android:background">@drawable/button_teal</item>
        <item name="android:paddingStart">@dimen/studentapp_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/studentapp_button_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/studentapp_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/studentapp_button_vertical_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontFamily">@font/segoebold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body" parent="TextAppearance.MaterialComponents.Body1" />

</resources>